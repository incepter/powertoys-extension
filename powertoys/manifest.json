{
  "manifest_version": 3,
  "name": "PowerToys",
  "version": "1.0",
  "description": "A collection of power tools for web browsing",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "PowerToys Developer",
  "homepage_url": "https://github.com/incepter/powertoys-extension"
}
